<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">vendor_module_image_listing.vendor_module_image_listing_data_source</item>
            <item name="deps" xsi:type="string">vendor_module_image_listing.vendor_module_image_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">image_columns</item>
    </argument>
    <dataSource name="vendor_module_image_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Vendor\Module\Ui\DataProvider\Image\DataProvider</argument>
            <argument name="name" xsi:type="string">vendor_module_image_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">image_id</argument>
            <argument name="requestFieldName" xsi:type="string">image_id</argument>
            <argument name="collection" xsi:type="object">Vendor\Module\Model\ResourceModel\Image\Collection</argument>
        </argument>
    </dataSource>
    <columns name="image_columns">
        <column name="image_id">
            <settings>
                <filter>text</filter>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="image">
            <settings>
                <filter>text</filter>
                <label translate="true">Image</label>
                <component>Vendor_Module/js/grid/columns/thumbnail</component>
            </settings>
        </column>
    </columns>
</listing>
